<html  style="padding:0px;margin:0px;background-color:transparent;overflow:hidden; ">  
<head>   
	<%= javascript_include_tag(:defaults) %>
	
	<script>
	function resizeToContent(){  
		try {
		var x =0;
		var y = getFrameHeight();
		var x = getFrameWidth();
		
	  
		parent.document.getElementById("ttb_widget").style.height= ( y ) ; 
		parent.document.getElementById("ttb_widget").style.width=  ( x ) ;  
		}catch(error){
			
		}
	}     
	
	function getFrameHeight(){ 
	   return  (getFrameBody().getHeight()) + "px";
	}   

	function getFrameWidth(){
	   return (getFrameBody().getWidth()) + "px";
	}   

	function getFrameBody(){
	   //$( (this.contentBody ? this.contentBody : this.document.body) );
	   return $('my_invites_list');
	}
	</script>
</head>
<body onload="resizeToContent();" style="padding:0px;margin:0px;background-color:transparent;overflow:hidden; ">  
	<%= yield %>
</body>
</html>