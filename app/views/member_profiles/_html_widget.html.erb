<% widget_box_id = "user_widget_#{profile_widget.id}" %>

<div class="pwidget" id="<%= widget_box_id %>">
	
	<div class="header">
		<h3 class="movable"><%= profile_widget.title %></h3>
		<h5><%= link_to_remote('DEL', :url => {:action => 'delete_widget', :id => profile_widget.id}, 
									  :html => {:class => 'pdelete'},
									  :confirm => 'Are you sure you want to delete this box?') %></h5>
		<h5><%= link_to_function('EDIT', "editProfile('#{widget_box_id}');", :class => 'pedit') %></h5>
	</div>
	
	<!-- VIEW -->
	<div class="view">
		<%= profile_widget.html %>
	</div>
	
	<!-- EDIT -->
	<div class="edit" style="display: none;" >
			<div id="edit_subsection_user_<%= profile_widget.id %>" class="edit_subsection">	
				<% form_tag(:action => 'update_profile_widget_html') do -%>
					<%= hidden_field_tag('profile_widget[id]', profile_widget.id) %>
					<p id="box_name">
						<label>BOX NAME:</label>
						<%= text_field_tag("profile_widget[title]", profile_widget.title, :class => 'txt title') %>
					</p>
					<p id="html_content">
							<label>CONTENT:</label>
							<br/>
							<%= text_area_tag("profile_widget[html]", profile_widget.html, :class => 'txt title') %>
					</p>
				
                                                 <%=  widget_buttons_new("cancelEditProfile('#{widget_box_id}');") %>

				<% end %>
	 		</div>
	</div>

</div>