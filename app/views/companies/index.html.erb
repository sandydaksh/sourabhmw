<div style="width: 690px; clear: both; padding-left: 165px;">
<h1>Listing Companies</h1> 

<table width="690" border="0" cellspacing="3" cellpadding="0" align="center">
<% i = 1 %>
  <tr>
    <th>SNo.</th>
    <th>Companies</th>
    <th>URL Name</th>
    <th>Companies Logo</th>
    <!--<th width="210">Landing Page Heading</th>-->
    <!--<th width="150">Landing Page Content</td>-->
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>

  <tr>
    <td class="univ-alumni"><%= i %></td>
    <td width="200" class="univ-alumni"><%= company.name %></td>
    <td width="200" class="univ-alumni"><%= company.url %></td>
    <td  class="univ-alumni"><% if !company.binary_data.nil? %><%= image_tag("/invitations/code_image/#{company.id}", :alt => "#{company.name}") %><% else %><%= company.url %><% end %><!--<img  src="/picture/thumb/<%#= company.logo %>" alt="<%#= private_mw %>" name="<%#= private_mw %>"/>--></td>
    <!--<td width="210" class="univ-alumni"><%#= company.text_header %></td>-->
    <!--<td width="150" class="univ-alumni"><%#= company.welcome_text %></td>-->
    <td width="134" class="univ-alumni"><%= link_to 'Edit', edit_company_path(company), :class=>"savetext" %></td>
    <td width="134" class="univ-alumni">
    <% if company.status == true %>
		<%#= link_to 'Disable', company,:disable => "disable", :confirm => 'Are you sure to disable this company?', :method => :delete, :class=>"savetext" %>
        <a href="/disable_company?id=<%= company.id %>&disable=disable" onclick="if (confirm('Are you sure to disable this company?')) { var f = document.createElement('form'); f.style.display = 'none'; this.parentNode.appendChild(f); f.method = 'POST'; f.action = this.href;var m = document.createElement('input'); m.setAttribute('type', 'hidden'); m.setAttribute('name', '_method'); m.setAttribute('value', 'delete'); f.appendChild(m);f.submit(); };return false;" class="savetext">Disable</a>
    <% else %>
    	<%#= link_to 'Enable', company,:del => "del", :confirm => 'Are you sure to enable this company?', :method => :delete, :class=>"savetext" %>
        <a href="/enable_company?id=<%= company.id %>&enable=enable" onclick="if (confirm('Are you sure to enable this company?')) { var f = document.createElement('form'); f.style.display = 'none'; this.parentNode.appendChild(f); f.method = 'POST'; f.action = this.href;var m = document.createElement('input'); m.setAttribute('type', 'hidden'); m.setAttribute('name', '_method'); m.setAttribute('value', 'delete'); f.appendChild(m);f.submit(); };return false;" class="savetext">Enable</a>
    <% end %>
    </td>
  </tr>
<% i = i + 1 %>
<% end %>
</table>

<br />

